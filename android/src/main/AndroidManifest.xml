<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.itmodreamteam.myrest.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyRestApplication"
        android:allowBackup="true"
        android:icon="@drawable/myrest"
        android:label="MyRest"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.login.SignUpActivity" android:label="@string/title_activity_signIn"/>
        <activity android:name=".ui.login.SignInActivity" android:label="@string/title_activity_signUp" />
        <activity android:name=".ui.login.SignInOrSignUp"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".restaurant.search.RestaurantSearchActivity" />
    </application>

</manifest>